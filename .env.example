# Copy to `.env` and fill values (the deploy script auto-loads `.env`)

# Docker Hub
DOCKER_USER=your_docker_user
DOCKER_LOGIN_USER=your_docker_user
DOCKER_LOGIN_PASS=your_docker_password_or_pat
TAG=latest
BASE_TAG=latest

# HuggingFace (only needed to build the base image once)
HF_TOKEN=hf_your_token

# Vast Serverless
ENDPOINT_NAME=z-image-turbo
GPU_TYPE=RTX_4090
DISK_SIZE=150
MIN_WORKERS=1
MAX_WORKERS=5

# Filters (avoid slow hosts)
MIN_DRIVER_VERSION=570.86.15
MIN_PCIE_BW=20

# Attention backend (fixe)
DIFFUSERS_ATTN_BACKEND=flash

# Perf inference (safe + fast)
ZIMAGE_COMPILE=1

# Build-base options (Dockerfile.base)
CACHE_DIT_REF=main
FLASH_ATTN_VERSION=2.8.3
# Set to 1 to build without downloading the model (no HF_TOKEN needed).
SKIP_MODEL_DOWNLOAD=0
# Optional: copy the model from an existing image when SKIP_MODEL_DOWNLOAD=1
MODEL_SRC_IMAGE=

# Optionnel: flags vastai create workergroup
WORKER_LAUNCH_ARGS=
